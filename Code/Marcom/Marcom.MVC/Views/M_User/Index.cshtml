
@{
    ViewBag.Title = "List User";
}

<style>
    table th {
        width: 16%;
    }

    .modal {
    }

        .modal .modal-dialog {
        }

            .modal .modal-dialog .modal-content {
                border: solid 1px #3c8dbc;
                border-radius: 10px 10px 10px 10px;
            }

                .modal .modal-dialog .modal-content .modal-header {
                    border: solid 1px #3c8dbc;
                    background-color: #3c8dbc;
                    border-radius: 10px 10px 0 0;
                }
</style>

<div class="box">
    <div class="box-header">
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-lg-12">
                <button type="button" id="btn-Create" class="btn btn-lg btn-info pull-right">
                    Add
                </button>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped" id="data-list">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Role</th>
                            <th>Company</th>
                            <th>Username</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="item-list"></tbody>
                    <tfoot>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal-Form">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">List Item</h4>
            </div>
            <div class="modal-body">
                <p>One fine body&hellip;</p>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            ShowList();
        })

        function ShowList() {
            $.ajax({
                url: "http://localhost:50876/api/M_Users",
                type: 'get',
                data: 'json',
                success: function (result) {
                    var table = "<table class='table'>";
                    table += "<tbody>";
                    $.each(result, function (i, item) {

                        var tr = "<tr><td>" + item.FullName + "</td><td>'" + item.RoleName + "</td><td>" + item.CompanyName + "</td><td>" + item.Username + "</td><td>" + item.CreatedBy + "</td><td>" + item.CreatedDate + "</td><td><button type='button' class='btn btn-sm btn-info btn-View' data-id='" + item.Id + "' ><span class='glyphicon glyphicon-sunglasses'></span></button><button type='button' class='btn btn-sm btn-warning btn-Edit' data-id='" + item.Id + "'onclick='EditUser()' ><span class='glyphicon glyphicon-edit'></span></button><button type='button' class='btn btn-sm btn-danger btn-Delete' data-id='" + item.Id + "'onclick='DeleteUser(this)'  ><span class='glyphicon glyphicon-trash'></x></button></td></tr>";
                        table += tr;

                    })
                    table += "</tbody>";
                    table += "</table>";
                    $("#item-list").html(table);
                    $("#data-list").DataTable();
                },
                error: function (err) {
                    alert(err);
                }
            })
        }

        function SetRoleId(u_roleId) {
            $.ajax({
                url: 'http://localhost:50876/api/M_Roles',
                type: 'GET',
                success: function (result) {
                    $('#u_roleId').html('<option value="0">Select Role</option>');
                    $.each(result, function (i, item) {
                        var option = '<option value="' + item.Id + '">' + item.Name + '</option>';
                        $('#u_roleId').append(option);
                    })
                    $('#u_roleId').val(u_roleId)
                },
                error: function (err) {
                    alert(err);
                }
            })
        }

        function SetEmployeeId(u_EmployeeId) {
            $.ajax({
                url: 'http://localhost:50876/api/M_Employees',
                type: 'GET',
                success: function (result) {
                    $('#u_EmployeeId').html('<option value="0">Select Employee</option>');
                    $.each(result, function (i, item) {
                        var option = '<option value="' + item.Id + '">' + item.FullName + '</option>';
                        $('#u_EmployeeId').append(option);
                    })
                    $('#u_EmployeeId').val(u_roleId)
                },
                error: function (err) {
                    alert(err);
                }
            })
        }


        $("#btn-Create").click(function () {
            SetRoleId(0);
            SetEmployeeId(0);
            var form = "<form method='post'>";//<select id='rId><o
            form += "<table>"
            form += "<tr><td>" + 'Role Name' + "</td><td><select id='u_roleId'><option value=''>Select Role</option>>/select></td><td>" + 'Username' + "</td><td><input type='text' name='u_Username' id='u_Username'></td></tr>"
            form += "<tr><td>" + 'Employee Name' + "</td><td><select id='u_EmployeeId'><option value=''>Select Employee</option>>/select></td><td>" + 'Password' + "</td><td><input type='text' name='u_Password' id='u_Password'></td></tr>"
            form += "</table>";
            form += "<br>"
            form += "<button type='button' class='btn btn-sm btn-success btn-Save' onclick='AddUser()'>Save</button><button type='button' class='btn btn-sm btn-default' data-dismiss='modal'>Cancel</button>"
            form += "</form>";
            $(".modal-body").html(form);
            $(".modal-title").html("Add User");
            $("#modal-Form").modal("show");
        })

        function AddUser() {
            var m_role_id = $("#u_roleId").val();
            var username = $("#u_Username").val();
            var m_employee_id = $("#u_EmployeeId").val();
            var password = $("#u_Password").val();

            var data = { MRoleId: m_role_id, Username: username, MEmployeeId: m_employee_id, Password: password };

            $.ajax({
                url: "http://localhost:50876/api/M_Users",
                type: 'post',
                contentType: 'application/json',
                dataType: 'json',
                data: JSON.stringify(data),
                success: function (result) {
                    if (result.Success) {
                        alert("Success");
                        $("#modal-Form").modal("hide");
                        ShowList();
                    }
                    else {
                        alert("error : " + result.Message);
                    }
                },
                error: function (err) {
                    alert(err);
                }
            })
        }

        /////////////////////////////
        function EditUser(obj) {
            var id = $(obj).attr("data-id");
            $.ajax({
                url: "http://localhost:50876/api/M_Users/" + id,
                type: 'GET',
                contentType: "JSON",
                success: function (result) {
                    var tr = GetItem(result);
                    $(".modal-body").html(tr);
                    $(".modal-title").html("Edit User");
                    $("#modal-Form").modal("show");
                },
                error: function (err) {
                    alert(err)
                }
            })
        }

        //get by id
        function GetItem(data) {
            var form = "<form>";
            form += "<table>"
            form += "<tr><td>" + 'Souvenir Code' + "</td><td><input data-val='true' id='dataId' name='dataId' type='hidden' value='" + data.Id + "'><input class='form-control text-box single-line' id='dataCode' name='dataCode' readonly='readonly' type='text' value='" + data.Code + "'></td><td>" + 'Unit Name' + "</td><td><input class='form-control text-box single-line' type='text' id='dataUnit' name='dataUnit' value='" + data.mUnitId + "'></td></tr>"
            form += "<tr><td>" + 'Souvenir name' + "</td><td><input class='form-control text-box single-line' type='text' id='dataName' name='dataName' value='" + data.Name + "'></td><td>" + 'Description' + "</td><td><input class='form-control text-box single-line' type='text' id='dataDescription' name='dataDescription' value='" + data.Description + "'></td></tr>"
            form += "</table>";
            form += "<br>"
            form += "<button type='button' class='btn btn-sm btn-success' onclick='UpdateUser(this)'>Update</button><button type='button' class='btn btn-sm btn-default' data-dismiss='modal'>Cancel</button>"
            form += "</form>";

            return form;
        }
        //post edit
        function UpdateUser(obj) {
            var id = $("#dataId").val();
            var m_role_id = $("#u_roleId").val();
            var username = $("#u_Username").val();
            var m_employee_id = $("#u_EmployeeId").val();
            var password = $("#u_Password").val();

            var data = { Id: id, MRoleId: m_role_id, Username: username, MEmployeeId: m_employee_id, Password: password };
            $.ajax({
                url: "http://localhost:50876/api/M_Users/" + id,
                type: 'put',
                contentType: 'application/json',
                dataType: 'json',
                data: JSON.stringify(data),
                success: function (result) {
                    if (result.Success) {
                        alert("Success");
                        $("#modal-Form").modal("hide");
                        ShowList();
                    }
                    else {
                        alert("error : " + result.Message);
                    }
                },
                error: function (err) {
                    alert(err);
                }
            })
        }
        //delete
        function DeleteUser(obj) {
            var id = $(obj).attr("data-id");
            $.ajax({
                url: "http://localhost:50876/api/M_Users/" + id,
                type: 'delete',
                dataType: 'json',
                data: id,
                success: function (result) {
                    if (result.Success) {
                        alert("Success");
                        ShowList();
                    }
                    else {
                        alert("error : " + result.Message);
                    }
                },
                error: function (err) {
                    alert(err);
                }
            })
        }
    </script>
}