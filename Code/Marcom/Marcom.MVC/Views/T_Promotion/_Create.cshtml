        <div class="box">
            <div class="box-header">
                <h5><b>Design Item Information</b></h5>
            </div>
            <div class="box-body">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Product Description</th>
                                <th>Title</th>
                                <th>Qty</th>
                                <th>Todo</th>
